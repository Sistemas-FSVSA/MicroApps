<link rel="stylesheet" href="/css/compras/nuevopedido.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center d-flex justify-content-between">
            <div class="col-sm-4 d-flex align-items-center">
                <button class="btn btn-outline-secondary mr-2" onclick="irAtras()">
                    <i class="fas fa-angle-double-left"></i> Regresar
                </button>
                <h1 class="m-0" id="title">Encargos</h1>
            </div>
            <div class="col-sm-4 text-center">
                <span id="dependenciaPedido" class="font-weight-bold">
                    <!-- Aquí se renderizará dinámicamente la dependencia y el número de pedido -->
                </span>
            </div>
            <div class="col-sm-4 text-right">
                <button class="btn btn-outline-secondary mr-2" id="flechaIzquierda">
                    <i class="fas fa-arrow-left"></i>
                </button>
                <button class="btn btn-outline-secondary" id="flechaDerecha">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
    <hr>
</div>

<div class="content">
    <div class="container-fluid">
        <!-- Fila con botón y select alineados -->
        <div class="row mb-3">
            <div class="col-md-6 d-flex align-items-center">
                <!-- Botón Agregar Item -->
                <button class="btn btn-fsvsaoff" id="agregarItem">
                    <i class="fas fa-plus"></i> Agregar Item
                </button>
            </div>
            <div class="col-md-6 d-flex justify-content-end align-items-center">
                <!-- Select Aprobado por -->
                <label for="aprobadoPor" class="mb-0 mr-2" id="LabelAprobadoPor">Aprobado por:</label>
                <select id="aprobadoPor" class="form-control w-auto">
                    <option value="">Seleccione</option>
                    <option value="usuario1">Usuario 1</option>
                    <option value="usuario2">Usuario 2</option>
                    <!-- Más opciones si necesitas -->
                </select>
            </div>
        </div>

        <!-- Tabla de ítems -->
        <div id="item-container" class="mt-4 table-responsive">
            <table id="tablaItemsSeleccionados" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Item</th>
                        <th>Categoría</th>
                        <th>Cantidad</th>
                        <th>Solicitó</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody id="tbodyitem">
                    <!-- Filas dinámicas -->
                </tbody>
            </table>
        </div>
    </div>
</div>



<div class="btn-container">
    <a class="btn btn-fsvsaoff" id="guardarEncargo" tabindex="-1">Guardar Encargo</a>
    <a class="btn btn-fsvsaon" id="cerrarEncargo">Cerrar Encargo</a>
    <a class="btn btn-fsvsaon" id="confirmarEntrega">Confirmar Entrega</a>
    <a class="btn btn-fsvsaon" id="aprobarEncargo">Aprobar Encargo</a>
    <a class="btn btn-fsvsaon" id="autorizarEncargo">Autorizar Compra</a>
</div>

<div class="modal fade" id="modalAñadirItem" tabindex="-1" aria-labelledby="modalAñadirItemLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl"> <!-- Cambia a modal-lg o modal-xl -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAñadirItemLabel">Añadir Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Input para ingresar el nombre del item -->
                <input type="text" id="inputNuevoItem" class="form-control mb-3"
                    placeholder="Ingrese el nombre del item">

                <div class="table-responsive">
                    <table id="itemTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Item</th>
                                <th>Categoría</th>
                                <th>Descripcion</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyNuevoItem">
                            <!-- Aquí se agregarán los items dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="/controllers/compras/continuarpedido.js"></script>