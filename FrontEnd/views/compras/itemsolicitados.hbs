<link rel="stylesheet" href="/css/compras/itemsolicitados.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center d-flex justify-content-between">
            <div class="col-sm-12 d-flex align-items-center">
                <button class="btn btn-outline-secondary mr-2" onclick="irAtras()">
                    <i class="fas fa-angle-double-left"></i> Regresar
                </button>
                <h1 class="m-0" id="title">Productos Solicitados</h1>
            </div>
        </div>
    </div>
    <hr>
</div>
<div class="content">
    <div class="container-fluid">
        <div id="item-container" class="mt-4 table-responsive">
            <table id="tablaItemsSeleccionados" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Nombre</th>
                        <th>Categoria</th>
                        <th>Solicitado</th>
                        <th>Ordenado</th>
                        <th>Diferencia</th>
                        <th>Ver</th>
                        <th>Seleccionar</th>
                    </tr>
                </thead>
                <tbody id="tbodyitem">
                    <!-- Filas dinámicas -->
                </tbody>
            </table>

        </div>
    </div>
</div>

<div class="btn-container">
    <a class="btn btn-fsvsaoff" id="ordenSalida" tabindex="-1">Orden Salida</a>
    <a class="btn btn-fsvsaoff" id="orderCompra" tabindex="-1">Orden Compra</a>
</div>

<div class="modal fade" id="modalOrdenSalida" tabindex="-1" aria-labelledby="modalOrdenSalidaLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalOrdenSalidaLabel">Orden Salida</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table id="ordenSalidaTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Item</th>
                                <th>Categoría</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyOrdenSalida">
                            <!-- Aquí se agregarán los items dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-fsvsaon" onclick="manejarOrden()">Generar</button>
            </div>
        </div>
    </div>
</div>



<script src="/controllers/compras/itemsolicitados.js"></script>