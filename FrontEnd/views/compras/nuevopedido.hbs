<link rel="stylesheet" href="/css/compras/nuevopedido.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center d-flex justify-content-between">
            <div class="col-sm-4 d-flex align-items-center">
                <button class="btn btn-outline-secondary mr-2" onclick="irAtras()">
                    <i class="fas fa-angle-double-left"></i> Regresar
                </button>
                <h1 class="m-0" id="title">Encargos</h1>
            </div>
            <div class="col-sm-6 text-right">
                <h3 id="fechaActual" class="m-0"></h3>
                <span id="" class="text-muted">Compras</span>
            </div>
        </div>
    </div>
    <hr>
</div>

<div class="content">
    <div class="container-fluid">
        <!-- Botón Agregar Item -->
        <!-- Fila con botón y select alineados -->
        <div class="row mb-3">
            <div class="col-md-6 d-flex align-items-center">
                <!-- Botón Agregar Item -->
                <button class="btn btn-fsvsaoff" id="agregarItem">
                    <i class="fas fa-plus"></i> Agregar Item
                </button>
            </div>
            <div class="col-md-6 d-flex justify-content-end align-items-center gap-2">
                <!-- Select Aprobado por -->
                <select id="aprobadoPor" class="form-control w-auto">
                    <option disabled selected value="">Aprobado por...</option>
                    <!-- opciones dinámicas -->
                </select>

                <!-- Select Proveedor -->
                <select id="proveedor" class="form-control w-auto ml-2">
                    <option disabled selected value="">Proveedor...</option>
                    <!-- opciones dinámicas -->
                </select>
            </div>

        </div>

        <div id="item-container" class="mt-4 table-responsive">
            <table id="tablaItemsSeleccionados" class="table table-striped table-bordered" style="width: 99%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Item</th>
                        <th>Categoría</th>
                        <th>Cantidad</th>
                        <th>Solicito</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody id="tbodyitem">
                    <!-- Filas dinámicas -->
                </tbody>
            </table>

        </div>
    </div>
</div>

<div class="btn-container">
    <a class="btn btn-fsvsaoff" id="guardarEncargo" tabindex="-1">Guardar Encargo</a>
    <a class="btn btn-fsvsaon" id="cerrarEncargo" tabindex="-1">Cerrar Encargo</a>
    <a class="btn btn-fsvsaon" id="ordenCompra" tabindex="-1">Generar Orden Compra</a>
</div>

<div class="modal fade" id="modalAñadirItem" tabindex="-1" aria-labelledby="modalAñadirItemLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl"> <!-- Cambia a modal-lg o modal-xl -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalAñadirItemLabel">Añadir Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Input para ingresar el nombre del item -->
                <input type="text" id="inputNuevoItem" class="form-control mb-3"
                    placeholder="Ingrese el nombre del item">

                <div class="table-responsive">
                    <table id="itemTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Item</th>
                                <th>Categoría</th>
                                <th>Descripcion</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyNuevoItem">
                            <!-- Aquí se agregarán los items dinámicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="/controllers/compras/nuevopedido.js"></script>