<link rel="stylesheet" href="/css/compras/pedidos.css">

<div class="content-header">
  <div class="container-fluid">
    <div class="mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Pedidos</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">
    <div id="mensajeDependencia" style="display:none; text-align:center; margin-top: 50px;">
      <h2>No tienes dependencia asignada.</h2>
      <p>Por favor, contacta con el encargado de compras.</p>
    </div>

    <!-- Cards Container -->
    <div class="row justify-content-center" id="cardsContainer">

      <!-- Card: Manejar Pedido -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="Pedido">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-file-medical"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="redireccionNuevoPedido()">Nuevo Pedido</button>
          </div>
        </div>
      </div>

      <!-- Card: Aprobar Pedido -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="PedidoAprobar">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-file-prescription"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="redireccionAprobarPedido()">Aprobar Pedidos</button>
          </div>
        </div>
      </div>

      <!-- Card: Revisar Pedido -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="RevisarPedido">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-file-prescription"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="redireccionRevisarPedido()">Revisar Pedidos</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<script src="/controllers/compras/pedidos.js"></script>
