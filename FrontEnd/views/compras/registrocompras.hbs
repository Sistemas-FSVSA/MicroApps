<link rel="stylesheet" href="/css/compras/registrocompras.css">

<div class="content-header">
  <div class="container-fluid">
    <div class="mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Registro</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">

    <!-- Cards Container -->
    <div class="row justify-content-center" id="cardsContainer">

      <!-- Card: Registrar Items -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regItems">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-cart-plus"></i></i></h1>
            <button type="button" class="btn btn-fsvsaon" id="regItems">Items</button>
          </div>
        </div>
      </div>

      <!-- Card: Registrar Categorias -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regCategorias">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-folder-plus"></i></h1>
            <button type="button" class="btn btn-fsvsaon">Categorias</button>
          </div>
        </div>
      </div>

      <!-- Card: Registrar Proveedores -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regProveedores">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-calendar-plus"></i></h1>
            <button type="button" class="btn btn-fsvsaon">Proveedores</button>
          </div>
        </div>
      </div>

      <!-- Card: Registrar Usuarios -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regUsuarios">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-user-plus"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="">Usuarios</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- MODALES PARA EL MANEJO DE ITEMS -->
<div class="modal fade" id="modalEditarItem" tabindex="-1" aria-labelledby="modalEditarItemLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarItemLabel">Items</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row mb-3 align-items-center">
          <div class="col-md-9">
            <input type="text" id="inputNuevoItem" class="form-control" placeholder="Buscar item...">
          </div>
          <div class="col-md-3">
            <button type="button" class="btn btn-fsvsaon btn-block" id="btnRegistrarItems">Registrar Items</button>
          </div>
        </div>
        <div class="table-responsive">
          <table id="EditaritemTable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Item</th>
                <th>Descripcion</th>
                <th>Categoría</th>
                <th>Acción</th>
                <th>Estado</th>
              </tr>
            </thead>
            <tbody id="tbodyEditarItem">
              <!-- Se insertan filas dinámicamente -->
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="modalRegistrarItems" tabindex="-1" aria-labelledby="modalRegistrarItemsLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="modalRegistrarItemsLabel">Registrar Nuevo Ítem</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="form-group">
          <label for="selectCategoria">Categoría</label>
          <select id="selectCategoria" class="form-control">
            <option value="">Seleccione una categoría</option>
            <!-- Opciones dinámicas -->
          </select>
        </div>

        <div class="form-group">
          <label for="inputNombreItem">Nombre del Ítem</label>
          <input type="text" class="form-control" id="inputNombreItem" placeholder="Escribe el nombre...">
        </div>
        <div class="form-group">
          <label for="inputNombreItem">Descripcion</label>
          <textarea type="textarea" class="form-control" id="inputDescripcionItem"
            placeholder="Escribe la descripcion..."></textarea>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-fsvsaon" id="btnConfirmarRegistro">Registrar</button>
      </div>

    </div>
  </div>
</div>
<div class="modal fade" id="modalEditarItemSeleccionado" tabindex="-1" aria-labelledby="modalEditarItemLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarItemLabel">Editar Ítem</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Tus campos de formulario -->
        <input type="hidden" id="inputEditarIdItem">
        <div class="form-group">
          <label for="selectEditarCategoria">Categoría</label>
          <select id="selectEditarCategoria" class="form-control">
            <option value="">Seleccione una categoría</option>
          </select>
        </div>
        <div class="form-group">
          <label for="inputEditarNombreItem">Nombre del Ítem</label>
          <input type="text" class="form-control" id="inputEditarNombreItem" placeholder="Nombre...">
        </div>
        <div class="form-group">
          <label for="inputEditarDescripcionItem">Descripción</label>
          <textarea class="form-control" id="inputEditarDescripcionItem" placeholder="Descripción..."></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-fsvsaon" id="btnGuardarCambiosItem">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>

<!-- MODALES PARA EL MANEJO DE USUARIOS -->
<div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-labelledby="modalEditarUsuarioLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarItemLabel">Items</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row mb-3 align-items-center">
          <div class="col-md-9">
            <input type="text" id="inputUsuario" class="form-control" placeholder="Buscar usuario...">
          </div>
          <div class="col-md-3">
            <button type="button" class="btn btn-fsvsaon btn-block" id="btnBuscarUsuario"
              onclick="buscarUsuarios()">Buscar Usuario</button>
          </div>
        </div>
        <div class="table-responsive">
          <table id="EditarUsuarioTable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Identificacion</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Acción</th>
              </tr>
            </thead>
            <tbody id="tbodyEditarUsuario">
              <!-- Se insertan filas dinámicamente -->
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>
<!-- MODAL: Editar Usuario Seleccionado -->
<div class="modal fade" id="modalEditarUsuarioSeleccionado" tabindex="-1" aria-labelledby="modalEditarUsuarioLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Editar Usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="inputEditarIdUsuario">
        <div class="form-group">
          <label>Identificación</label>
          <input type="text" class="form-control" id="inputEditarIdentificacion" readonly>
        </div>
        <div class="form-group">
          <label>Nombres</label>
          <input type="text" class="form-control" id="inputEditarNombres" readonly>
        </div>
        <div class="form-group">
          <label>Apellidos</label>
          <input type="text" class="form-control" id="inputEditarApellidos" readonly>
        </div>
        <div class="form-group">
          <label>Dependencias</label>
          <div id="resumenDependencias" class="mb-2">-</div>
          <button type="button" class="btn btn-secondary btn-sm" onclick="abrirModalSeleccionarDependencias()">
            Seleccionar Dependencias
          </button>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-fsvsaon" onclick="actualizarUsuario()">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>
<!-- MODAL: Seleccionar Dependencias -->
<div class="modal fade" id="modalSeleccionarDependencias" tabindex="-1"
  aria-labelledby="modalSeleccionarDependenciasLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Seleccionar Dependencias</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Aquí se cargarán las dependencias dinámicamente -->
        <div id="listaDependencias" class="form-group">
          <!-- checkboxes aquí -->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaon" data-dismiss="modal"
          onclick="actualizarResumenDependencias()">Aceptar</button>
      </div>
    </div>
  </div>
</div>

<!-- MODAL: Manejo de Categorías -->
<div class="modal fade" id="modalCategorias" tabindex="-1" role="dialog" aria-labelledby="modalCategoriasLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">

      <!-- Encabezado -->
      <div class="modal-header">
        <h5 class="modal-title" id="modalCategoriasLabel"><i class="fas fa-tags mr-2"></i>Gestión de Categorías</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <!-- Cuerpo -->
      <div class="modal-body">
        <form id="CategoriasForm" class="needs-validation" novalidate>
          <div class="form-row align-items-end">
            <div class="col-md-10 mb-3">
              <label for="categoria">Nombre de la Categoría</label>
              <input type="text" class="form-control" id="categoria" placeholder="Nombre de la Categoría" required>
              <div class="invalid-feedback">
                Por favor, ingrese el nombre de la categoría.
              </div>
            </div>
            <div class="col-md-2 mb-3">
              <button class="btn btn-fsvsaon" type="button" id="registrarCatBtn" data-tipo="categoria">
                <i class="fas fa-plus mr-1"></i>Registrar
              </button>
            </div>
          </div>
        </form>

        <div class="table-responsive mt-3" style="max-height: 300px; overflow-y: auto;">
          <table id="categoriasTable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th class="d-none">ID</th>
                <th>Nombre</th>
                <th>Estado</th>
              </tr>
            </thead>
            <tbody>
              <!-- Datos insertados aquí -->
            </tbody>
          </table>
        </div>
      </div>

      <!-- Pie del modal -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>

    </div>
  </div>
</div>

<!-- MODAL: Manejo de Proveedores -->
<div class="modal fade" id="modalProveedores" tabindex="-1" role="dialog" aria-labelledby="modalProveedoresLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">

      <!-- Encabezado -->
      <div class="modal-header">
        <h5 class="modal-title" id="modalProveedoresLabel"><i class="fas fa-tags mr-2"></i>Gestión de Proveedores</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <!-- Cuerpo -->
      <div class="modal-body">
        <div class="d-flex justify-content-between align-items-center mb-2 flex-wrap gap-2">
          <div>
            <button class="btn btn-fsvsaon" type="button" id="registrarProBtn" data-tipo="proveedor">
              <i class="fas fa-plus mr-1"></i> Registrar
            </button>
          </div>
          <!-- Aquí se moverá el input de búsqueda de DataTables vía JS -->
          <div id="dataTableSearchWrapper"></div>
        </div>

        <div class="table-responsive" style="overflow-x: auto;">
          <table id="ProveedorTable" class="table table-striped table-bordered" style="width: 100%;">
            <thead>
              <tr>
                <th class="d-none">ID</th>
                <th>Identificacion</th>
                <th>Razón Social</th>
                <th>Estado</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>

      <!-- Pie del modal -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>

    </div>
  </div>
</div>



<script src="/controllers/compras/registrocompras.js"></script>