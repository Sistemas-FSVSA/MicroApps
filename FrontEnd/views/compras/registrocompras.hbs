<link rel="stylesheet" href="/css/compras/registrocompras.css">

<div class="content-header">
  <div class="container-fluid">
    <div class="mb-2">
      <div class="col-sm-6">
        <h1 class="m-0">Registro</h1>
      </div>
    </div>
  </div>
</div>

<div class="content">
  <div class="container-fluid">

    <!-- Cards Container -->
    <div class="row justify-content-center" id="cardsContainer">

      <!-- Card: Registrar Items -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regItems">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-cart-plus"></i></i></h1>
            <button type="button" class="btn btn-fsvsaon" id="registrarItems">Items</button>
          </div>
        </div>
      </div>

      <!-- Card: Registrar Categorias -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regCategorias">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-folder-plus"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="">Categorias</button>
          </div>
        </div>
      </div>

      <!-- Card: Registrar Proveedores -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regProveedores">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-calendar-plus"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="">Proveedores</button>
          </div>
        </div>
      </div>

      <!-- Card: Registrar Usuarios -->
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4" id="regUsuarios">
        <div class="card text-center h-100">
          <div class="card-body">
            <h1><i class="fas fa-user-plus"></i></h1>
            <button type="button" class="btn btn-fsvsaon" onclick="">Usuarios</button>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Ya lo tienes, pero asegúrate de que esto esté en el DOM -->
<div class="modal fade" id="modalEditarItem" tabindex="-1" aria-labelledby="modalEditarItemLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarItemLabel">Items</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row mb-3 align-items-center">
          <div class="col-md-9">
            <input type="text" id="inputNuevoItem" class="form-control" placeholder="Buscar item...">
          </div>
          <div class="col-md-3">
            <button type="button" class="btn btn-fsvsaon btn-block" id="btnRegistrarItems">Registrar Items</button>
          </div>
        </div>
        <div class="table-responsive">
          <table id="EditaritemTable" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Item</th>
                <th>Categoría</th>
                <th>Acción</th>
                <th>Estado</th>
              </tr>
            </thead>
            <tbody id="tbodyEditarItem">
              <!-- Se insertan filas dinámicamente -->
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal para registrar nuevo item -->
<div class="modal fade" id="modalRegistrarItems" tabindex="-1" aria-labelledby="modalRegistrarItemsLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="modalRegistrarItemsLabel">Registrar Nuevo Ítem</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="form-group">
          <label for="selectCategoria">Categoría</label>
          <select id="selectCategoria" class="form-control">
            <option value="">Seleccione una categoría</option>
            <!-- Opciones dinámicas -->
          </select>
        </div>

        <div class="form-group">
          <label for="inputNombreItem">Nombre del Ítem</label>
          <input type="text" class="form-control" id="inputNombreItem" placeholder="Escribe el nombre...">
        </div>
        <div class="form-group">
          <label for="inputNombreItem">Descripcion</label>
          <textarea type="textarea" class="form-control" id="inputDescripcionItem"
            placeholder="Escribe la descripcion..."></textarea>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-fsvsaon" id="btnConfirmarRegistro">Registrar</button>
      </div>

    </div>
  </div>
</div>


<script src="/controllers/compras/registrocompras.js"></script>