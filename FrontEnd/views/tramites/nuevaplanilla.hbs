<link rel="stylesheet" href="/css/tramites/nuevaplanilla.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center d-flex justify-content-between">
            <div class="col-sm-4 d-flex align-items-center">
                <button class="btn btn-outline-secondary mr-2" onclick="irAtras()">
                    <i class="fas fa-angle-double-left"></i> Regresar
                </button>
                <h1 class="m-0" id="title">Nueva Planilla</h1>
            </div>
            <div class="col-sm-6 text-right">
                <h3 id="usuarioNombre" class="m-0"></h3>
                <h3 id="usuarioNombrePlantilla" class="m-0"></h3>
                <span id="fechaActual" class="text-muted"></span>
            </div>
        </div>
    </div>
    <hr>
</div>

<div class="content">
    <div class="container-fluid" id="contenedorTramites">
        <!-- Contenedores dinámicos para los trámites -->
    </div>
    <button class="btn btn-fsvsaoff" id="agregarTramite">Agregar Trámite</button>
</div>

<!-- Botón fijo en la esquina inferior derecha -->
<button class="btn btn-fsvsaoff btn-fixed2" id="guardarPlanilla">Guardar Planilla</button>
<!-- Botón fijo en la esquina inferior derecha -->
<a class="btn btn-fsvsaon btn-fixed" id="editarPlanilla" tabindex="-1">Editar Planilla</a>
<button class="btn btn-fsvsaon btn-fixed" id="cerrarPlanilla">Cerrar Planilla</button>

<!-- Modal para escoger tipo de trámite -->
<div class="modal fade" id="modalTipoTramite" tabindex="-1" aria-labelledby="modalTipoTramiteLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTipoTramiteLabel">Seleccione el tipo de trámite</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <button class="btn btn-fsvsaon w-100 mb-2" id="tipoMetropolitano">Metropolitano - (Sencillas)</button>
                <button class="btn btn-fsvsaoff w-100" id="tipoExterior">Municipales - (Exteriores)</button>
            </div>
        </div>
    </div>
</div>

<script src="/controllers/tramites/planilla.js"></script>
<script src="/controllers/tramites/nuevaplanilla.js"></script>