<link rel="stylesheet" href="/css/usuarios/usuarios.css">

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2 align-items-center d-flex justify-content-between">
            <div class="col-sm-4 d-flex align-items-center">
                <button class="btn btn-outline-secondary mr-2" onclick="irAtras()">
                    <i class="fas fa-angle-double-left"></i> Regresar
                </button>
                <h1 class="m-0" id="title">Gestion de Usuarios</h1>
            </div>
            <div class="col-sm-6 text-right">
                <h3 id="fechaActual" class="m-0"></h3>
                <span id="" class="text-muted">Administración</span>
            </div>
        </div>
    </div>
    <hr>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <button class="btn btn-fsvsaoff" id="agregarUsuario">Registar Usuario</button>
        </div>
        <div id="usuarios-container" class="mt-4">
            <table id="usuariosTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Email</th>
                        <th>Identificacion</th>
                        <th>Perfiles</th>
                        <th>Ultimo Ingreso</th>
                        <th>Estado</th>
                        <th>Editar</th>
                        <th>Conexión</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalUsuario" tabindex="-1" aria-labelledby="modalUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg"> <!-- Modal más amplio -->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalUsuarioLabel">Registrar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Formulario -->
                <form id="formUsuario">
                    <!-- Input para Documento con Botón de Lupa -->
                    <div class="mb-3">
                        <label for="documentoUsuario" class="form-label">Documento del Usuario</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="documentoUsuario"
                                placeholder="Ingrese el documento" required>
                            <button class="btn btn-outline-secondary" type="button" id="buscarUsuario">
                                <i class="fas fa-search"></i> Buscar
                            </button>
                        </div>
                    </div>

                    <!-- Información del Usuario - Etiquetas Editables -->
                    <div id="infoUsuario">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="nombreUsuario" class="form-label">Nombres</label>
                                <input type="text" class="form-control" id="nombreUsuario">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="apellidoUsuario" class="form-label">Apellidos</label>
                                <input type="text" class="form-control" id="apellidoUsuario">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="emailUsuario" class="form-label">Email del Usuario</label>
                            <input type="email" class="form-control" id="emailUsuario">
                        </div>
                    </div>

                    <!-- Botón Añadir Perfil -->
                    <div class="mb-3">
                        <button type="button" class="btn btn-fsvsaon" id="añadirPerfilBtn">Añadir Perfil</button>
                    </div>

                    <!-- Campo para mostrar los perfiles seleccionados -->
                    <div class="mb-3">
                        <input type="hidden" id="ocultoPerfilesInput" name="perfilesIds">
                        <label for="perfilesUsuario" class="form-label">Perfiles</label>
                        <input type="text" class="form-control" id="perfilesUsuario" readonly>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-fsvsaon" id="registrarUsuario">Registrar</button>
                <button type="button" class="btn btn-fsvsaon" id="actualizarUsuario">Actualizar</button>
                <button type="button" class="btn btn-fsvsaoff" data-dismiss="modal"
                    id="cancelarModalUsuario">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalPerfiles" tabindex="-1" aria-labelledby="modalPerfilesLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalPerfilesLabel">Seleccionar Perfiles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Lista de perfiles disponibles -->
                <ul id="listaPerfiles" class="list-group"></ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="/controllers/usuarios/usuarios.js"></script>